<AnchorPane prefHeight="474.0" prefWidth="584.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminCurrentBookingsController">
   <children>
      <Label layoutX="21.0" layoutY="22.0" text="Hotel Reservation System">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <GridPane layoutX="21.0" layoutY="53.0" prefHeight="66.0" prefWidth="505.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="247.0" minWidth="10.0" prefWidth="172.0" />
          <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="333.0" minWidth="10.0" prefWidth="333.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="No of current bookings are:" />
            <TextField fx:id="noOfBookingsField" maxWidth="-Infinity" prefWidth="160.0" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <TableView fx:id="currentBookingsTable" layoutX="21.0" layoutY="129.0" prefHeight="247.0" prefWidth="542.0">
        <columns>
          <TableColumn fx:id="bookingNoColumn" prefWidth="91.0" text="Booking #" />
          <TableColumn fx:id="nameColumn" prefWidth="123.0" text="Customer Name" />
            <TableColumn fx:id="roomTypeColumn" minWidth="1.0" prefWidth="115.0" text="Room Type" />
            <TableColumn fx:id="noOfRoomsColumn" minWidth="0.0" prefWidth="106.0" text="No of Rooms" />
            <TableColumn fx:id="noOfDaysColumn" minWidth="0.0" prefWidth="106.0" text="No of Days" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" layoutX="192.0" layoutY="376.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
            <Button fx:id="cancelButton" lineSpacing="20.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
         </children>
      </HBox>
   </children>
</AnchorPane>
