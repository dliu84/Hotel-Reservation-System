<AnchorPane prefHeight="338.0" prefWidth="472.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminBillServiceController">
   <children>
      <Label layoutX="21.0" layoutY="22.0" text="Hotel Reservation System">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <GridPane layoutX="21.0" layoutY="73.0" prefHeight="192.0" prefWidth="422.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Search by name:" />
            <TextField fx:id="nameField" prefHeight="26.0" prefWidth="127.0" GridPane.columnIndex="1" />
            <Label text="Search by phone number:" GridPane.rowIndex="1" />
            <TextField fx:id="phoneField" prefHeight="26.0" prefWidth="127.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Search by booking id:" GridPane.rowIndex="2" />
            <TextField fx:id="bookingIdField" prefHeight="26.0" prefWidth="127.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Button fx:id="searchButton" layoutX="271.0" layoutY="286.0" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
      <Button fx:id="cancelButton" layoutX="358.0" layoutY="286.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
   </children>
</AnchorPane>
